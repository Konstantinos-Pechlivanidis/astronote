{
  "name": "@astronote/retail-api",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "prisma generate",
    "lint": "cd apps/api && npm run lint",
    "test": "cd apps/api && npm run test",
    "gate": "npm run prisma:validate && npm run lint && npm run test && npm run build",
    "gate:prisma": "prisma generate && prisma migrate status && prisma migrate deploy",
    "gate:api": "cd apps/api && npm run lint && npm run build",
    "gate:worker": "node -c apps/worker/src/sms.worker.js && node -c apps/worker/src/scheduler.worker.js && node -c apps/worker/src/statusRefresh.worker.js && node -c apps/worker/src/contactImport.worker.js",
    "gate:retail": "npm run gate:prisma && npm run gate:api && npm run gate:worker",
    "prisma:init": "prisma init --datasource-provider postgresql",
    "prisma:migrate": "node scripts/migrate.js",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:validate": "prisma validate",
    "prisma:check": "prisma validate && prisma migrate status",
    "verify:contracts": "cd apps/api && npm run verify:contracts",
    "seed:templates": "cd apps/api && node scripts/seed-templates-final-idempotent.js",
    "start": "cd apps/api && node src/server.js",
    "start:all": "cd apps/api && node src/server.js",
    "start:server-only": "cd apps/api && cross-env START_WORKER=0 node src/server.js",
    "dev": "cd apps/api && node --watch src/server.js",
    "worker:sms": "cd apps/worker && node src/sms.worker.js",
    "worker:scheduler": "cd apps/worker && node src/scheduler.worker.js",
    "worker:status": "cd apps/worker && node src/statusRefresh.worker.js",
    "worker:contact-import": "cd apps/worker && node src/contactImport.worker.js"
  },
  "keywords": [],
  "author": "Konstantinos Pechlivanidis",
  "license": "ISC",
  "devDependencies": {
    "prisma": "6.17.1",
    "cross-env": "^10.1.0"
  },
  "dependencies": {
    "@prisma/client": "6.17.1",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.29",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "pino": "^9.9.5",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "rate-limiter-flexible": "^7.3.1",
    "stripe": "^17.3.1",
    "swagger-ui-express": "^5.0.1",
    "exceljs": "^4.4.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  }
}
