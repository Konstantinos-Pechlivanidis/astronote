{
  "name": "@astronote/shopify-api",
  "version": "1.0.0",
  "description": "Astronote - Shopify SMS Marketing Extension Backend",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "dev:watch": "nodemon index.js",
    "build": "prisma generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test:redis": "node scripts/test-redis.js",
    "setup:shop": "node scripts/update-shop-access-token.js",
    "prisma:validate": "prisma validate",
    "prisma:generate": "prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset --force",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:status": "prisma migrate status",
    "test": "NODE_ENV=test node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:integration": "NODE_ENV=test node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --config ./jest.integration.config.js",
    "test:watch": "NODE_ENV=test node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --watch",
    "test:coverage": "NODE_ENV=test node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --coverage",
    "check:shopify:prisma": "node scripts/check-shopify-prisma.mjs"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@shopify/shopify-api": "^8.1.1",
    "axios": "^1.6.2",
    "bullmq": "^4.15.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.29",
    "morgan": "^1.10.0",
    "redis": "^4.7.1",
    "stripe": "^19.1.0",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "eslint": "^8.55.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "prisma": "^6.17.1",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "shopify",
    "sms",
    "marketing",
    "automation",
    "api",
    "backend"
  ],
  "author": "Konstantinos Pechlivanidis",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/astronote-shopify-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/astronote-shopify-backend/issues"
  },
  "homepage": "https://github.com/your-username/astronote-shopify-backend#readme"
