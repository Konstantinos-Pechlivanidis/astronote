{
  "name": "astronote-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise-grade SMS Marketing Platform for Shopify and Retail Businesses",
  "keywords": [
    "sms",
    "marketing",
    "shopify",
    "retail",
    "automation",
    "campaigns",
    "monorepo"
  ],
  "author": "Konstantinos Pechlivanidis",
  "repository": {
    "type": "git",
    "url": "https://github.com/Konstantinos-Pechlivanidis/astronote.git"
  },
  "workspaces": [
    "apps/astronote-web",
    "apps/retail-api",
    "apps/shopify-api"
  ],
  "scripts": {
    "dev": "concurrently -n shopify-api,astronote-web -c blue,green \"npm run dev:shopify\" \"npm run dev:web\"",
    "dev:shopify": "npm -w @astronote/shopify-api run dev",
    "dev:retail": "npm -w @astronote/retail-api run dev",
    "dev:web": "npm -w @astronote/web-next run dev",
    "build": "npm -w @astronote/web-next run build && npm -w @astronote/retail-api run build && npm -w @astronote/shopify-api run build",
    "build:web": "npm -w @astronote/web-next run build",
    "build:retail": "npm -w @astronote/retail-api run build",
    "build:shopify": "npm -w @astronote/shopify-api run build",
    "lint": "npm -w @astronote/web-next run lint --if-present && npm -w @astronote/shopify-api run lint --if-present",
    "lint:fix": "npm -w @astronote/web-next run lint:fix --if-present && npm -w @astronote/shopify-api run lint:fix --if-present",
    "format": "npm -w @astronote/shopify-api run format --if-present",
    "format:write": "npm -w @astronote/shopify-api run format:write --if-present",
    "test": "npm -w @astronote/shopify-api run test --if-present",
    "typecheck": "npm -w @astronote/web-next run typecheck --if-present",
    "check": "npm run lint && npm run format && npm run build",
    "verify:builds": "node scripts/verify-builds.js",
    "smoke:api": "node scripts/smoke-test.js",
    "audit:billing": "node scripts/audit-billing.mjs",
    "audit:retail:billing:contract": "node scripts/audit-retail-billing-contract.mjs",
    "audit:retail:billing:frontend": "node scripts/audit-retail-billing-frontend-usage.mjs",
    "audit:shopify:e2e": "node scripts/audit-shopify-e2e.mjs",
    "audit:shopify:sms": "node scripts/audit-shopify-sms.mjs",
    "audit:shopify:billing": "node scripts/audit-shopify-billing.mjs",
    "audit:shopify:contacts": "node scripts/audit-shopify-contacts.mjs",
    "audit:shopify:templates": "node scripts/audit-shopify-templates.mjs",
    "audit:shopify:settings": "node scripts/audit-shopify-settings.mjs",
    "audit:shopify:automations": "node scripts/audit-shopify-automations-graphql.mjs",
    "audit:shopify:ui": "node scripts/audit-shopify-ui.mjs",
    "audit:shopify:frontend-api": "node scripts/audit-shopify-frontend-api.mjs",
    "audit:shopify:headers": "node scripts/audit-shopify-headers.mjs",
    "audit:shopify:frontend-requirements": "node scripts/audit-shopify-frontend-requirements.mjs",
    "audit:shopify:prisma": "node scripts/audit-shopify-prisma-alignment.mjs",
    "audit:shopify:campaigns": "node scripts/audit-shopify-campaigns.mjs",
    "audit:shopify:campaigns:contract": "node scripts/audit-shopify-campaigns-contract.mjs",
    "audit:shopify:campaigns:frontend": "node scripts/audit-shopify-campaigns-frontend-usage.mjs",
    "audit:shopify:campaigns:ui": "node scripts/audit-shopify-campaigns-ui-parity.mjs",
    "audit:shopify:unsubscribe": "node scripts/audit-shopify-unsubscribe-shortlinks.mjs",
    "audit:shopify:mitto:campaigns": "node scripts/audit-shopify-mitto-campaigns.mjs",
    "audit:shopify:mitto:statuses": "node scripts/audit-shopify-mitto-statuses.mjs",
    "audit:shopify:mitto:webhooks": "node scripts/audit-shopify-mitto-webhooks.mjs",
    "audit:shopify:campaigns-ui": "node scripts/audit-shopify-campaigns-ui-parity.mjs",
    "audit:shopify:campaigns-endpoints": "node scripts/audit-shopify-campaigns-endpoints.mjs",
    "audit:shopify:campaigns-ui:confirm": "node scripts/audit-shopify-campaigns-ui-confirmation.mjs",
    "audit:deploy:prisma": "node scripts/audit-deploy-prisma.mjs",
    "audit:deploy:shopify-frontend": "node scripts/audit-deploy-shopify-frontend.mjs",
    "audit:shopify:billing": "node scripts/audit-shopify-billing.mjs",
    "audit:shopify:billing:contract": "node scripts/audit-shopify-billing-contract.mjs",
    "audit:shopify:billing:frontend": "node scripts/audit-shopify-billing-frontend-usage.mjs",
    "audit:shopify:subscription-gating": "node scripts/audit-shopify-subscription-gating.mjs",
    "release:gate": "node scripts/audit-release-gate.mjs && npm run stamp:release:gate",
    "stamp:release:gate": "node scripts/stamp-release-gate.mjs",
    "shopify:gate": "node scripts/shopify-gate.mjs",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "axios": "^1.6.2"
  },
  "engines": {
    "node": ">=20 <21",
    "npm": ">=8.0.0"
  },
  "license": "ISC"
}
